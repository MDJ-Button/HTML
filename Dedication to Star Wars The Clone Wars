          window.onload = function()
          {
              img.style.height = "300";
              img.style.width = "300";
          };

          function changeImageA()
          {
          var img = document.getElementById("img");
          img.src="http://www.getwallpapers.com/wallpaper/full/1/9/6/247883.jpg";
          return false;
          }

